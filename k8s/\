apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: uc16-odoo-pvc
  namespace: odoo-app
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 5Gi
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: uc16-odoo
  namespace: odoo-app
  labels:
    app: uc16-odoo
spec:
  replicas: 1
  selector:
    matchLabels:
      app: uc16-odoo
  template:
    metadata:
      labels:
        app: uc16-odoo
    spec:
      nodeSelector:
        kubernetes.io/hostname: k8s-worker02
      containers:
        - name: odoo
          image: odoo:17
          ports:
            - containerPort: 8069
          envFrom:
            - secretRef:
                name: odoo-env
          volumeMounts:
            - name: odoo-data
              mountPath: /var/lib/odoo
      volumes:
        - name: odoo-data
          persistentVolumeClaim:
            claimName: uc16-odoo-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: uc16-odoo
  namespace: odoo-app
spec:
  type: NodePort
  selector:
    app: uc16-odoo
  ports:
    - port: 8069
      targetPort: 8069
      nodePort: 30070




